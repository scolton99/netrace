<resources>

    <!-- Base application theme. -->
    <style name="NetraceTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoBar" parent="NetraceTheme">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="NetraceTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NetraceTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NetraceTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
